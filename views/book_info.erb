<h1><%= @book.name() %></h1>

<h3>Select all authors for this book:</h3>

<% if @authors.any?() %>
<form action="/books/<%= @book.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <% @authors.each() do |author| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="author_ids[]" value="<%= author.id() %>"><%=author.name() %>
    </label>
  </div>
  <% end %>

  <button type="submit">Add authors</button>
</form>
<% end %>

<% if @book.authors().any?() %>

<h3>Here are all of the authors for this book:</h3>

<ul>
  <% @book.authors().each() do |author| %>
  <li><%= author.name() %></li>
  <% end %>
</ul>
  <% else %>
    <p>there are no authors yet! <a href="/authors">Add authors here</a></p>
    <% end %>

    <a href="/">Return to main page</a>
